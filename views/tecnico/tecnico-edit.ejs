<!DOCTYPE html>
<html lang="es">

  <%- include('../template/cabecera') %>
  
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="./profile"><img src="img/icon.png" alt="Node.js icon" class="nav-icon"></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <%- include ('../template/ul') %>
        <form class="d-flex" action="./search-tecnico" method="GET">
          <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Buscar" name="search">
          <button class="btn secondary-btn" type="submit">Buscar</button>
        </form>
        <a href="/logout" class="btn btn-secondary ms-4">Cerrar sesion</a>
      </div>
    </div>
  </nav>
  <br>
  <div class="container">
    <div class="position-absolute">
      <%- include ('../message/message') %>
    </div>
    <div class="text-center">
      <h2>Actualice los datos</h2>
    </div>
    <br>
    <form action="./edit-tecnico" method="POST">
      <input type="hidden" name="id" value="<%= tecnico.id %>">
      <div class="row">
        <div class="col-12">
          <label for="nombre" class="form-label">Nombre</label>
          <input type="text" name="nombre" id="nombre" value="<%= tecnico.nombre %>" class="form-control">
        </div>
      </div>
      <br>
      <br>
      <div class="row">
        <div class="col-6">
          <label for="puesto" class="form-label">Puesto</label>
          <input type="puesto" name="puesto" id="puesto" value="<%= tecnico.puesto %>" class="form-control">
        </div>
        <div class="col-6">
          <label for="phone" class="form-label">Telefono</label>
          <input type="number" name="telefono" id="telefono" value="<%= tecnico.telefono %>" class="form-control">
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-6">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" id="email" value="<%= tecnico.email %>" class="form-control">
        </div>
      </div>
      <br>

      <br>
      <div class="row">
        <div class="col-6">
          <div class="float-start">
            <button type="submit" class="btn primary-btn">Actualizar tecnico</button>
          </div>
        </div>
        <div class="col-6">
          <div class="float-end">
            <a href="./tecnicos" class="btn secondary-btn">Volver atras</a>
          </div>
        </div>
      </div>
    </form>
  </div>
  <%- include('../template/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
    crossorigin="anonymous"></script>
</body>

</html>