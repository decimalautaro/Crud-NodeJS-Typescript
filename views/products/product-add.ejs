<!DOCTYPE html>
<html lang="es">

  <%- include('../template/cabecera') %>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="./profile"><img src="img/icon.png" alt="Node.js icon" class="nav-icon"></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <%- include ('../template/ul') %>
        <form class="d-flex" action="./search" method="GET">
          <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Buscar" name="search">
          <button class="btn btn-outline-secondary" type="submit">Buscar</button>
        </form>
        <a href="/logout" class="btn btn-secondary ms-4">Cerrar sesion</a>
      </div>
    </div>
  </nav>
  <br>
  <div class="container">
    <div class="position-absolute">
      <%- include ('../message/message') %>
    </div>
    <div class="text-center">
      <h2>Llene los datos</h2>
    </div>
    <br>
    <form action="./add-product" method="POST">
      <div class="row">
        <div class="col-12">
          <label for="nameProduct" class="form-label">Nombre</label>
          <input type="text" name="nameProduct" id="nameProduct" class="form-control">
        </div>
      </div>
      <br>

      <div class="row">
        <div class="col-6">
          <label for="price" class="form-label">Precio</label>
          <input type="text" name="price" id="price" class="form-control">
        </div>
        <div class="col-6">
          <label for="type" class="form-label">Tipo</label>
          <input type="text" name="type" id="type" class="form-control">
        </div>
      </div>
      <br>
      <div class="col-6">
          <label for="categoryId" class="form-label">Categoría</label>
          <select name="categoryId" id="categoryId" class="form-select">
            <option value="" selected disabled>Seleccione Categoría</option>
            <%  category.forEach(function(category){ %>
              <option value="<%= category.id %>">
                <%= category.name %>
              </option>
              <%})%>
          </select>
      </div>

      <br>
      <div class="row">
        <div class="col-6">
          <div class="float-start">
            <button type="submit" class="btn new-btnregar producto</button>
          </div>
        </div>
        <div class="col-6">
          <div class="float-end">
            <a href="./profile" class="btn btn-outline-secondary">Volver a inicio</a>
          </div>
        </div>
      </div>
    </form>
  </div>
  <%- include('../template/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
    crossorigin="anonymous"></script>
  <script src="js/product-script.js"></script>
</body>

</html>