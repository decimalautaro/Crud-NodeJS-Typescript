<!DOCTYPE html>
<html lang="es">

  <%- include('../template/cabecera') %>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="./profile"><img src="img/icon.png" alt="Node.js icon" class="nav-icon"></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <%- include ('../template/ul') %>
        <form class="d-flex" action="./search-reclamo" method="GET">
          <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Buscar" name="search">
          <button class="btn secondary-btn" type="submit">Buscar</button>
        </form>
        <a href="/logout" class="btn btn-secondary ms-4">Cerrar sesion</a>
      </div>
    </div>
  </nav>
  <br>
  <div class="row container centered" width="100vw">
    <div class="position-absolute">
      <%- include ('../message/message') %>
    </div>

    <div class="text-center">
      <h2>Lista de reclamos</h2>
    </div>
    <br>
    <br>
    <br>
    <div class="table-wrapper-scroll-y my-custom-scrollbar">
    <table class="table table-hover">
      <thead>
        <th scope="col">Tipo de reclamo</th>
        <th scope="col">N° de reclamo</th>
        <th scope="col">Fecha</th>
        <th scope="col">Estado</th>
        <th scope="col">Usuario</th>
        <th scope="col">Tecnico</th>
        <th scope="col">Creación</th>
        <th scope="col">Actualización</th>
        <th scope="col">Comportamiento</th>
      </thead>
      <tbody>
        <% reclamos.forEach(function(reclamo) { %>
          <tr>
            <td>
              <%= reclamo.tipoReclamo %>
            </td>
            <td>
              <%= reclamo.numeroReclamo %>
            </td>
            <td>
              <%= reclamo.fecha.toLocaleDateString() %>
            </td>
            <td>
              <%= reclamo.estado %>
            </td>
            <td>
              <%= reclamo.user.username %>
            </td>
            <td>
              <%= reclamo.tecnico.nombre %>
            </td>
            <td>
              <%= reclamo.created_at.toLocaleDateString() %>
                <%= reclamo.created_at.toLocaleTimeString() %>
            </td>
            <td>
              <%= reclamo.updated_at.toLocaleDateString() %>
                <%= reclamo.updated_at.toLocaleTimeString() %>
            </td>
            <td>
              <div class="row">
                <div class="row">
                  <form action="./reclamo-edit" method="GET">
                    <input type="hidden" name="id" value="<%= reclamo.id %>">
                    <button type="submit" class="btn edit-btn"><i class="bi bi-pencil"></i></button>
                  </form>
                </div>
                <div class="row"></div>
                <div class="row">
                  <form action="./reclamo-delete"  method="POST">
                    <input type="hidden" name="id" value="<%= reclamo.id %>" >
                    <button type="submit" class="btn delete-btn"><i class="bi bi-trash"></i></button>
                  </form>
                </div>
              </div>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
    <br>
    <br>
    <div class="float-start">
      <a href="./add-reclamo" class="btn primary-btn">Agregar reclamo</a>
    </div>
  </div>
  <%- include('../template/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
    crossorigin="anonymous"></script>
</body>

</html>