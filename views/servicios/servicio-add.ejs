<!DOCTYPE html>
<html lang="es">

<%- include('../template/cabecera') %>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="./profile"><img src="img/icon.png" alt="Node.js icon" class="nav-icon"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <%- include ('../template/ul') %>
            <form class="d-flex" action="./search" method="GET">
              <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Buscar" name="search">
              <button class="btn btn-outline-secondary" type="submit">Buscar</button>
            </form>
            <a href="/logout" class="btn btn-secondary ms-4">Cerrar sesion</a>
        </div>
      </div>
    </nav>
    <br>
    <div class="container">
      <div class="position-absolute">
        <%- include ('../message/message') %>
      </div>
      <br>
      <form action="./servicio-add" method="POST">
        <div class="container bg-white mt-5 mb-5">
          <div class="row">
            <div class="col border-right">
              <div class="px-4 py-5 ">
                <div class="text-center mb-5">
                  <h2>Nuevo Insumo</h2>
                  <hr>
                </div>
                <div>
                  <img src="img/form.png" width="17%" height="17%" class="img-fluid rounded mx-auto d-block">
                </div>
                <div class="row col-auto mb-3">
                  <div class="card my-4">
                    <div class="d-flex justify-content-between align-items-center mb-3 mt-4">
                      <h4 class="text-right">Datos</h4>
                    </div>
                    <div class="row justify-content-evenly col-auto mb-3">
                      <div class="col-md-12">
                        <label for="planes" class="form-label">Plan</label>
                        <select class="form-select" name="planes" id="planes" required>
                            <option selected disabled value="">Elija una opción</option>
                            <option value="15mb">15 Mb</option>
                            <option value="50mb">50 Mb</option>
                            <option value="100mb">100 Mb</option>
                            <option value="300mb">300 Mb</option>
                        </select>
                      </div>
                    </div>
                    <div class="row justify-content-evenly col-auto mb-3">
                      <div class="col-md-6">
                        <label for="precio" class="form-label">Precio</label>
                        <input type="number" name="precio" id="precio" class="form-control">
                      </div>
                      <div class="form-check col-md-6">
                        <label for="tipoServicio" class="form-label">Tipo de servicio</label>
                        <select class="form-select" name="tipoServicio" id="tipoServicio" required>
                            <option selected disabled value="">Elija una opción</option>
                            <option value="Fibra Óptica">Fibra Óptica</option>
                            <option value="Radio Enlace">Radio Enlace</option>
                        </select>
                      </div>
                    </div>
                  </div>
                  <div class="d-flex flex-row mt-5 mb-4 justify-content-around" id="button">
                    <div class="col-auto ">
                      <button class="btn btn-success profile-button" type="submit">Guardar</button>
                    </div>
                    <div class="col-auto "><a class="btn btn-danger profile-button " href="./insumos"
                        type="button">Volver</a></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
    </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
      crossorigin="anonymous"></script>
    <script src="js/product-script.js"></script>
  </body>

</html>